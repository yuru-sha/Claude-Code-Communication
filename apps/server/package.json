{
  "name": "@claude-communication/server",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "npx prisma generate --schema=../../prisma/schema.prisma && ts-node-dev --respawn --transpile-only --project tsconfig.json src/server.ts",
    "build": "npx prisma generate --schema=../../prisma/schema.prisma && tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "vitest",
    "postinstall": "npx prisma generate --schema=../../prisma/schema.prisma"
  },
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "@prisma/client": "^6.12.0",
    "@upstash/redis": "^1.35.2",
    "archiver": "^7.0.1",
    "@claude-communication/types": "*",
    "@claude-communication/utils": "*"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/archiver": "^6.0.3",
    "typescript": "^5.8.3",
    "ts-node-dev": "^2.0.0",
    "vitest": "^3.2.4",
    "prisma": "^6.12.0"
  }
}