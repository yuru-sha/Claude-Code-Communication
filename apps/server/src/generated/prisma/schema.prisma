// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/database.db"
}

model Task {
  id            String    @id @default(cuid())
  title         String
  description   String
  status        String // 'pending' | 'in_progress' | 'completed' | 'paused' | 'failed'
  assignedTo    String?
  pausedReason  String?
  failureReason String? // 失敗理由
  errorHistory  String? // エラー履歴（JSON 配列として保存）
  retryCount    Int       @default(0) // 再試行回数
  lastAttemptAt DateTime?
  projectName   String? // workspace 配下のプロジェクト名
  deliverables  String? // 成果物のパス（JSON 配列として保存）
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("tasks")
}

model UsageLimitState {
  id               Int       @id @default(autoincrement())
  isLimited        Boolean   @default(false)
  pausedAt         DateTime?
  nextRetryAt      DateTime?
  retryCount       Int       @default(0)
  lastErrorMessage String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("usage_limit_states")
}

model AppSettings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("app_settings")
}
