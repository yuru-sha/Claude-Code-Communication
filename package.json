    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:server": "ts-node-dev --respawn --transpile-only --project tsconfig.server.json src/backend/server.ts",
    "build": "vite build",
    "build:server": "tsc src/backend/server.ts --outDir dist/backend --target es2020 --module commonjs --esModuleInterop",
    "start": "NODE_ENV=production node dist/backend/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "optimize:images": "node scripts/optimize-images.js",
    "bundle-analyzer": "ANALYZE=true npm run build",
    "perf:analyze": "npm run bundle-analyzer",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:test": "npm run test:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuru-sha/Claude-Code-Communication.git"
  },
