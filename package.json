{
  "name": "claude-code-communication",
  "version": "1.0.0",
  "description": "複数の AI が協力して働く、まるで会社のような開発システムです",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@squoosh/lib": "^0.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/archiver": "^6.0.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=@claude-communication/client",
    "dev:server": "npm run dev --workspace=@claude-communication/server",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build --workspace=@claude-communication/types && npm run build --workspace=@claude-communication/utils && npm run build --workspace=@claude-communication/ui",
    "build:apps": "npm run build --workspace=@claude-communication/client",
    "build:apps:full": "npm run build --workspace=@claude-communication/client && npm run build --workspace=@claude-communication/server",
    "build:client": "npm run build --workspace=@claude-communication/client",
    "build:server": "npm run build --workspace=@claude-communication/server",
    "start": "npm run start --workspace=@claude-communication/server",
    "test": "npm run test --workspaces",
    "test:run": "npm run test --workspaces",
    "clean": "rm -rf apps/*/dist packages/*/dist",
    "optimize:images": "node scripts/optimize-images.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuru-sha/Claude-Code-Communication.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/yuru-sha/Claude-Code-Communication/issues"
  },
  "homepage": "https://github.com/yuru-sha/Claude-Code-Communication#readme",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@upstash/redis": "^1.35.2",
    "archiver": "^7.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "lucide-react": "^0.526.0",
    "prisma": "^6.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1"
  }
}
